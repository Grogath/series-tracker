{
    "manifest_version": 2,
    "name": "Holy Perceval's Series Tracker",
    "version": "1.0",
    "description": "Keep track of the series you watch and mark episodes as watched.",
    "permissions": [
      "storage"
    ],
    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_popup": "index.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  